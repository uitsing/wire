<h1>New Message</h1>

<%= turbo_frame_tag "new_message", target: "_top" do %>
  <%= form_with(model: [@room, @message],
                data: {
                  controller: "reset_form",
                  action: "turbo:submit-end->reset_form#reset"
                }) do |form| %>
    <div class="field">
      <%= form.text_field :content %>
      <%= form.submit "Send", data: { disable_with: false } %>
    </div>
  <% end %>
<% end %>

<%= link_to "Back", @message.room %>
